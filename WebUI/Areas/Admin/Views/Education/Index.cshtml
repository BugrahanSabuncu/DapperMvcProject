@model List<EducationListDto>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<a asp-action="Add" asp-controller="Education" asp-area="Admin" class="btn btn-primary m-2" >Kayıt Ekle</a>
<table class="table table-primary">
    <thead>
        <tr>            
            <th>Eğitim Aldığı Kurum</th>
            <th>Bölüm</th>
            <th>Mezuniyet Durumu</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>                
                <td>@item.Title</td>
                <td>@item.SubTitle</td>
                <td>@item.Description</td>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>
                    <a asp-action="Update" asp-controller="Education" asp-area="Admin" asp-route-id="@item.Id"                      
                       class="btn btn-warning">Güncelle</a>
                    <a asp-action="Delete" asp-controller="Education" asp-area="Admin" asp-route-id="@item.Id"
                       onclick="return confirm('Silmek istediğinize emin misiniz?')"
                       class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>