@model SocialMediaIconUpdateDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Update" asp-controller="SocialMediaIcon" asp-area="Admin" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="@Model.Id">
        <label>İkon</label><span asp-validation-for="@Model.Icon"></span>
        <input asp-for="@Model.Icon" class="form-control" />
    </div>
    <div class="form-group">
        <label>Web Adresi</label><span asp-validation-for="@Model.Link"></span>
        <input asp-for="@Model.Link" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary mt-2">Güncelle</button>
    </div>
</form>
