@model List<SocialMediaIconListDto>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="text-right mb-2">
    <a asp-action="Add" asp-controller="SocialMediaIcon" class="btn btn-outline-dark"> Yeni Kayıt</a>
</div>

<table class="table table-hover table-striped table-sm">
    <thead>
    <th>İcon Bilgisi</th>
    <th>Link Bilgisi</th>
    <th>İşlem</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Icon</td>
                <td>@item.Link</td>
                <td>
                    <a asp-action="Update" asp-controller="SocialMediaIcon" asp-area="Admin" asp-route-id="@item.Id"
                       class="btn btn-warning btn-sm mr-1"> Güncelle  </a>
                    <a asp-action="Delete" asp-controller="SocialMediaIcon" asp-area="Admin" asp-route-id="@item.Id"
                       class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinizden emin misiniz?')"> Sil </a>
                </td>
            </tr>
        }

    </tbody>


</table>