@model List<ExperienceListDto>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<a asp-action="Add" asp-controller="Experience" asp-area="Admin" class="btn btn-primary mt-2">Deneyim Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th>Çalıştığı Kurum</th>
            <th>Departman</th>
            <th>Çalıştığı Yıl</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.SubTitle</td>
                <td>@item.Description</td>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>
                    <a asp-action="Update" asp-controller="Experience" asp-area="Admin" asp-route-id="@item.Id"
                       class="btn btn-warning"> Güncelle</a>
                    <a asp-action="Delete" asp-controller="Experience" asp-area="Admin" asp-route-id="@item.Id"
                       class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>