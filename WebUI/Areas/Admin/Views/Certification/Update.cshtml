@model CertificationUpdateDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Update" asp-controller="Certification" method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        
        <label class="form-group">Sertifikanızı Güncelleyin </label><span class="text-danger" asp-validation-for="@Model.Description"></span>
        <input asp-for="@Model.Description" class="form-control" />
    </div>
   
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </div>
</form>