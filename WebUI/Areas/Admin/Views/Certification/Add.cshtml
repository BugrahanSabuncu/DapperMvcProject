@model CertificationAddDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Add" asp-controller="Certification" method="post">
    <div class="form-group"><span asp-validation-for="@Model.Description" class="text-danger"></span>
        <label>Sertifika Bilgisi</label>
        <input asp-for="@Model.Description" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>
