@model SkillUpdateDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Update" asp-controller="Skill" asp-area="Admin" method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label>İlgi Alanı</label><span asp-validation-for="@Model.Description"></span>
        <input asp-for="@Model.Description" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary mt-2">Güncelle</button>
    </div>
</form>